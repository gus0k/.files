# vim: filetype=sh

alias ls="ls --color=auto"
alias l="ls -lah"
alias rm="trash"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

## Git
alias g="git"
alias lg=lazygit

# Neovim
alias v="nvim"
alias vim="nvim"

alias Rz="source ~/.zshrc"
alias tmux="tmux -f ${HOME}/.config/tmux/tmux.conf"

## Python

alias S="source venv/bin/activate"
alias ipy="ipython --matplotlib=tk --no-confirm-exit --no-banner --quick --InteractiveShellApp.extensions=\"['autoreload']\" --InteractiveShellApp.exec_lines=\"['%autoreload 2', 'import os,sys']\""

## Centrica
alias cvpn="sudo openvpn /etc/openvpn/diego_centrica.ovpn"

## Ipod
alias mount-ipod="sudo mount -t hfsplus -o force,rw /dev/sdb2 /media/mntpoint"
