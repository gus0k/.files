# vim: filetype=sh

alias ls="ls --color=auto"
alias l="ls -lah"
alias rm="trash"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

## Git
alias g="git"
alias lg=lazygit

# Neovim
alias v="nvim"
alias vim="nvim"

alias Rz="source ~/.zshrc"
alias tmux="tmux -f ${HOME}/.config/tmux/tmux.conf"

## Python

alias S="source venv/bin/activate"
alias ipy="ipython --matplotlib=tk"

## Centrica
alias cvpn="sudo openvpn /etc/openvpn/diego_centrica.ovpn"
